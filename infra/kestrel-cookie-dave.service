[Unit]
Description=CookieDave.Web

[Service]
WorkingDirectory=/var/www/cookie-dave-web
ExecStart=/usr/bin/dotnet CookieDave.Web.dll

Restart=always
# Restart service after 10 seconds if the dotnet service crashes:
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=dotnet-CookieDave.Web
User=www-data
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false

[Install]
WantedBy=multi-user.target